{
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2021",
    "lib": ["ES2021"],

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "paths": {
      "#/*": ["./*"]
    },
    "moduleResolution": "bundler",
    "types": ["node", "jest"]
  },
  "include": ["services", "**/*.ts"]
}
