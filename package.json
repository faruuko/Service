{
  "name": "outrage-service",
  "description": "Repository for all Outrage services",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "lint": "eslint . --ext .ts --ignore-path .gitignore",
    "lint:fix": "eslint . --fix --ext .ts --ignore-path .gitignore",
    "format": "prettier --no-error-on-unmatched-pattern \"**/*.ts\" --write --ignore-path .gitignore",
    "test": "jest --passWithNoTests",
    "test:coverage": "jest --passWithNoTests --coverage=true --coverageReporters=cobertura",
    "test:watch": "jest --watchAll --coverage=true --coverageReporters=text",
    "prepare": "git config --local core.hooksPath ./git-hooks"
  },
  "repository": "https://github.com/faruuko/outrage-service.git",
  "author": "Faruq Alli-Balogun <ab.faruq@sten.agency>",
  "license": "Unlicense",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.133",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "sst": "^2.40.1",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "aws-lambda": "^1.0.7"
  },
  "eslintConfig": {
    "env": {
      "es2021": true
    },
    "globals": {
      "Symbol": "readonly"
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2021
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "no-console": [
        "error"
      ],
      "no-empty": [
        "error"
      ],
      "no-unused-vars": [
        "error"
      ]
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "none",
    "tabWidth": 2
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "moduleNameMapper": {
      "(.+)\\.js": "$1"
    },
    "collectCoverageFrom": [
      "**/*.ts"
    ],
    "coverageReporters": [
      "cobertura"
    ]
  }
}
